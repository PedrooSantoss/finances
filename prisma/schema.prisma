// schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transacao {
  id        Int           @id @default(autoincrement())
  descricao String
  valor     Float
  tipo      TipoTransacao
  createdAt DateTime      @default(now())
}

enum TipoTransacao {
  RECEITA
  DESPESA
}